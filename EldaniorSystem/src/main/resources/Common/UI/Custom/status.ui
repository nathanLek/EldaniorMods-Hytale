$Common = "Common.ui";

Group {
    LayoutMode: Center;

    Group #MainPanel {
        LayoutMode: Top;
        Anchor: (Width: 400, Height: 700);
        Background: #1a1f3a;
        Padding: (Left: 20, Top: 20, Right: 20, Bottom: 20);

        Label {
            Text: "STATUS";
            Style: (FontSize: 28, TextColor: #ffffff, HorizontalAlignment: Center);
            Anchor: (Height: 40);
        }

        Group {
            Anchor: (Height: 2);
            Background: #4a5f8a;
        }

        Label #NameText {
            Text: "NAME: ...";
            Style: (FontSize: 14, TextColor: #ffffff);
        }

        Label #JobText {
            Text: "JOB: ...";
            Style: (FontSize: 14, TextColor: #ffffff);
        }

        Label #TitleText {
            Text: "TITLE: ...";
            Style: (FontSize: 14, TextColor: #ffffff);
        }

        Label #LevelText {
            Text: "1";
            Style: (FontSize: 48, TextColor: #ffffff, HorizontalAlignment: Center);
        }

        Group {
            Anchor: (Height: 2);
            Background: #4a5f8a;
        }

        Label #HpText {
            Text: "HP: 100";
            Style: (FontSize: 16, TextColor: #ffffff);
        }

        Label #MpText {
            Text: "MP: 10";
            Style: (FontSize: 16, TextColor: #ffffff);
        }

        Group {
            Anchor: (Height: 2);
            Background: #4a5f8a;
        }

        Label #StrVal {
            Text: "STR: 0";
            Style: (FontSize: 14, TextColor: #ffffff);
        }

        TextButton #BtnStr {
            Text: "+";
            Background: #2a2a2a;
            Anchor: (Width: 30, Height: 30);
        }

        Label #VitVal {
            Text: "VIT: 0";
            Style: (FontSize: 14, TextColor: #ffffff);
        }

        TextButton #BtnVit {
            Text: "+";
            Background: #2a2a2a;
            Anchor: (Width: 30, Height: 30);
        }

        Label #IntVal {
            Text: "INT: 0";
            Style: (FontSize: 14, TextColor: #ffffff);
        }

        TextButton #BtnInt {
            Text: "+";
            Background: #2a2a2a;
            Anchor: (Width: 30, Height: 30);
        }

        Label #PerVal {
            Text: "PER: 0";
            Style: (FontSize: 14, TextColor: #ffffff);
        }

        TextButton #BtnPer {
            Text: "+";
            Background: #2a2a2a;
            Anchor: (Width: 30, Height: 30);
        }

        Label #AglVal {
            Text: "AGL: 0";
            Style: (FontSize: 14, TextColor: #ffffff);
        }

        TextButton #BtnAgl {
            Text: "+";
            Background: #2a2a2a;
            Anchor: (Width: 30, Height: 30);
        }

        Label #CmdVal {
            Text: "CMD: 0";
            Style: (FontSize: 14, TextColor: #ffffff);
        }

        TextButton #BtnCmd {
            Text: "+";
            Background: #2a2a2a;
            Anchor: (Width: 30, Height: 30);
        }

        Group {
            Anchor: (Height: 2);
            Background: #4a5f8a;
        }

        Label #PointsText {
            Text: "Points: 0";
            Style: (FontSize: 14, TextColor: #8fa5c7);
        }

        Label #MoneyText {
            Text: "COINS: 0";
            Style: (FontSize: 16, TextColor: #ffd700);
        }
    }
}