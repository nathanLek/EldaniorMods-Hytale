                    Group {
                        Anchor: (Width: 45, Height: 45);
                        Background: "buttonPlus.png";

                        TextButton #BtnAgl {
                            Text: "";
                            Anchor: (Width: 45, Height: 45);
                        }
                    }
                }

                Group {
                    Anchor: (Height: 10);
                }

                Group {
                    LayoutMode: Left;
                    Anchor: (Height: 45);

                    Label #CmdVal {
                        Text: "CH: 10";
                        Style: (FontSize: 17, TextColor: #ffffff);
                        Anchor: (Width: 125, Height: 20);
                    }

                    Group {
                        Anchor: (Width: 45, Height: 45);
                        Background: "buttonPlus.png";

                        TextButton #BtnCmd {
                            Text: "";
                            Anchor: (Width: 45, Height: 45);
                        }
                    }
                }
            }

            Group {
                Anchor: (Width: 10);
            }
        }

        Group {
            Anchor: (Height: 2);
        }

        Label #PointsText {
            Text: "Points disponibles: 0";
            Style: (FontSize: 15, TextColor: #66ff66, HorizontalAlignment: Center);
        }

        Group {
            Anchor: (Height: 22);
        }

        Group {
            LayoutMode: Left;
            Anchor: (Height: 40);

            Group {
                Anchor: (Width: 16);
            }

            Label {
                Background: "iconGold.png";
                Style: (FontSize: 28, TextColor: #ffd700);
                Anchor: (Width: 40);
            }

            Label #MoneyText {
                Text: "1000";
                Style: (FontSize: 24, TextColor: #ffdd00);
                Anchor: (Height: 26);
            }
