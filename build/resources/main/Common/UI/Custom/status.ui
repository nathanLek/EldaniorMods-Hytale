                    }
                }
            }

            Group {
                Anchor: (Width: 30);
            }

            Group {
                LayoutMode: Top;

                Group {
                    LayoutMode: Left;
                    Anchor: (Height: 45);

                    Label #PerVal {
                        Text: "END: 10";
                        Style: (FontSize: 17, TextColor: #ffffff);
                        Anchor: (Width: 125, Height: 20);
                    }

                    Group {
                        Anchor: (Width: 45, Height: 45);
                        Background: "buttonPlus.png";

                        TextButton #BtnPer {
