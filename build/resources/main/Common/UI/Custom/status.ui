$Common = "Common.ui";

Group {
    LayoutMode: Center;

    Group #MainPanel {
        LayoutMode: Top;
        Anchor: (Width: 500, Height: 780);
        Background: "backgroundStatus.png";
        Padding: (Left: 45, Top: 30, Right: 45, Bottom: 70);

        Label {
            Text: "STATUS";
            Style: (FontSize: 38, TextColor: #ffffff, HorizontalAlignment: Center);
            Anchor: (Height: 55);
        }

        Group {
            Anchor: (Height: 45);
        }

        Label #NameText {
            Text: "NAME: ...";
            Style: (FontSize: 20, TextColor: #00ddff);
        }

        Label #JobText {
            Text: "CLASSE: ...";
            Style: (FontSize: 26, TextColor: #ffdd00);
        }

        Label #TitleText {
            Text: "TITRE: ...";
            Style: (FontSize: 16, TextColor: #ffffff);
        }

        Group {
            Anchor: (Height: -20);
        }

        Group {
            LayoutMode: Left;
            Anchor: (Height: 10);

            Group {
                LayoutMode: Top;

                Group {
                    Anchor: (Height: -40);
                }
            }

            Group {
                Anchor: (Width: 237);
            }

            Group {
                LayoutMode: Top;
                Anchor: (Width: 260, Height: 100);

                Label #LevelText {
                    Text: "1";
                    Style: (FontSize: 34, TextColor: #00ddff, HorizontalAlignment: Center);
                }
            }
        }

        Group {
            Anchor: (Height: 30);
        }

        Label {
            Text: "EXPERIENCE";
            Style: (FontSize: 12, TextColor: #66ff66);
        }

        Label #LevelLabel {
            Text: "XP: 0 / 100";
            Style: (FontSize: 14, TextColor: #aabbcc);
        }

        Group {
            Anchor: (Height: 18);
            Background: #0f1428;

            ProgressBar #ProgressBar {
                BarTexturePath: "XPFill.png";
                Value: 0.0;
            }
        }

        Group {
            Anchor: (Height: 8);
        }

        Label {
            Text: "MANA";
            Style: (FontSize: 12, TextColor: #66aaff);
        }

        Label #MpText {
            Text: "MP: 100 / 100";
            Style: (FontSize: 14, TextColor: #ffffff);
        }

        Group {
            Anchor: (Height: 18);
            Background: #0f1428;

            ProgressBar #MpProgressBar {
                BarTexturePath: "MPFill.png";
                Value: 1.0;
            }
        }

        Group {
            Anchor: (Height: 30);
        }

        Label {
            Text: "ATTRIBUTES";
            Style: (FontSize: 14, TextColor: #ffcc66, HorizontalAlignment: Center);
        }

        Group {
            Anchor: (Height: 10);
        }

        Group {
            LayoutMode: Left;
            Anchor: (Height: 210);

            Group {
                Anchor: (Width: 10);
            }

            Group {
                LayoutMode: Top;

                Group {
                    LayoutMode: Left;
                    Anchor: (Height: 45);

                    Label #StrVal {
                        Text: "FOR: 10";
                        Style: (FontSize: 17, TextColor: #ffffff);
                        Anchor: (Width: 125, Height: 20);
                    }

                    Group {
                        Anchor: (Width: 45, Height: 45);
                        Background: "buttonPlus.png";

                        TextButton #BtnStr {
                            Text: "";
                            Anchor: (Width: 45, Height: 45);
                        }
                    }
                }

                Group {
                    Anchor: (Height: 10);
                }

                Group {
                    LayoutMode: Left;
                    Anchor: (Height: 50);

                    Label #VitVal {
